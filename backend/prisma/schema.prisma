generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      UserRole
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  driver    Driver?
  logs      AuditLog[]
}

enum UserRole {
  ADMIN
  DRIVER
}

model Driver {
  id              String       @id @default(auto()) @map("_id") @db.ObjectId
  userId          String       @unique @db.ObjectId
  user            User         @relation(fields: [userId], references: [id])
  employeeId      String       @unique
  licenseNo       String
  licenseExpiry   DateTime
  experienceYears Int
  depot           String?
  photoUrl        String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  trips           TripRecord[]
  incidents       IncidentReport[]
}

model Bus {
  id               String       @id @default(auto()) @map("_id") @db.ObjectId
  plateNumber      String       @unique
  fleetNumber      String?
  ownership        String       // Anbessa, Sheger, Velocity
  capacity         Int
  standingCapacity Int?
  manufacturer     String?
  modelYear        Int?
  depot            String?
  status           BusStatus    @default(AVAILABLE)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  trips            TripRecord[]
  incidents        IncidentReport[]
}

enum BusStatus {
  ON_ROUTE
  DELAYED
  UNDER_MAINTENANCE
  AVAILABLE
  OUT_OF_SERVICE
}

model Route {
  id                String        @id @default(auto()) @map("_id") @db.ObjectId
  code              String        @unique
  name              String
  originStopId      String        @db.ObjectId
  destinationStopId String        @db.ObjectId
  description       String?
  distanceKm        Float?
  operatingFrom     String?       // HH:mm
  operatingTo       String?       // HH:mm
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  stops             RouteStop[]
  schedules         Schedule[]
  trips             TripRecord[]
  feedbacks         Feedback[]
  incidents         IncidentReport[]
}

model Stop {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  code       String?
  area       String?
  latitude   Float?
  longitude  Float?
  isTerminal Boolean      @default(false)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  routes     RouteStop[]
  passages   StopPassage[]
  feedbacks  Feedback[]
  incidents  IncidentReport[]
}

model RouteStop {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  routeId               String   @db.ObjectId
  stopId                String   @db.ObjectId
  sequence              Int
  distanceFromStartKm   Float?
  estimatedTravelMinutes Int?
  route                 Route   @relation(fields: [routeId], references: [id])
  stop                  Stop    @relation(fields: [stopId], references: [id])
}

model Schedule {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  routeId         String   @db.ObjectId
  route           Route    @relation(fields: [routeId], references: [id])
  dayOfWeek       Int      // 0=Sunday..6=Saturday
  departureTime   String   // HH:mm
  arrivalTime     String?  // HH:mm
  frequencyMinutes Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model TripRecord {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  routeId        String         @db.ObjectId
  route          Route          @relation(fields: [routeId], references: [id])
  busId          String         @db.ObjectId
  bus            Bus            @relation(fields: [busId], references: [id])
  driverId       String         @db.ObjectId
  driver         Driver         @relation(fields: [driverId], references: [id])
  scheduledStart DateTime
  actualStart    DateTime?
  status         TripStatus     @default(PLANNED)
  stopPassages   StopPassage[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  incidents      IncidentReport[]
  feedbacks      Feedback[]
}

enum TripStatus {
  PLANNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model StopPassage {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  tripRecordId String      @db.ObjectId
  tripRecord   TripRecord  @relation(fields: [tripRecordId], references: [id])
  stopId       String      @db.ObjectId
  stop         Stop        @relation(fields: [stopId], references: [id])
  scheduledTime DateTime
  actualTime   DateTime?
}

model IncidentReport {
  id           String          @id @default(auto()) @map("_id") @db.ObjectId
  tripRecordId String?         @db.ObjectId
  tripRecord   TripRecord?     @relation(fields: [tripRecordId], references: [id])
  routeId      String?         @db.ObjectId
  route        Route?          @relation(fields: [routeId], references: [id])
  busId        String?         @db.ObjectId
  bus          Bus?            @relation(fields: [busId], references: [id])
  driverId     String?         @db.ObjectId
  driver       Driver?         @relation(fields: [driverId], references: [id])
  stopId       String?         @db.ObjectId
  stop         Stop?           @relation(fields: [stopId], references: [id])
  category     IncidentCategory
  severity     String?
  description  String
  status       IncidentStatus  @default(OPEN)
  reportedAt   DateTime        @default(now())
  resolvedAt   DateTime?
}

enum IncidentCategory {
  BREAKDOWN
  HEAVY_TRAFFIC
  BLOCKAGE
  ACCIDENT
  SAFETY
  OTHER
}

enum IncidentStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}

model Feedback {
  id           String           @id @default(auto()) @map("_id") @db.ObjectId
  category     FeedbackCategory
  routeId      String?          @db.ObjectId
  route        Route?           @relation(fields: [routeId], references: [id])
  tripRecordId String?          @db.ObjectId
  tripRecord   TripRecord?      @relation(fields: [tripRecordId], references: [id])
  stopId       String?          @db.ObjectId
  stop         Stop?            @relation(fields: [stopId], references: [id])
  comment      String
  rating       Int?
  contactInfo  String?
  status       FeedbackStatus   @default(NEW)
  submittedAt  DateTime         @default(now())
}

enum FeedbackCategory {
  DELAY
  OVERCROWDING
  SAFETY
  DRIVER_BEHAVIOR
  CLEANLINESS
  OTHER
}

enum FeedbackStatus {
  NEW
  IN_REVIEW
  CLOSED
}

model AuditLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?  @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  entityType String
  entityId  String?
  changes   Json?
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
}


{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"],
    "noEmit": false
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}

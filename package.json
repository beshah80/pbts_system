{
  "name": "pbts-system",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "db:generate": "cd shared && npm run db:generate",
    "db:push": "cd shared && npm run db:push",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:driver": "cd apps/driver && npm run dev", 
    "dev:passenger": "cd apps/passenger && npm run dev",
    "dev:all": "concurrently \"npm run dev:admin\" \"npm run dev:driver\" \"npm run dev:passenger\""
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "concurrently": "^8.2.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}